{
  "root": true,
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "airbnb",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "import/prefer-default-export": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "curly": ["error", "all"],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false,
        "argsIgnorePattern": "^_"
      }
    ],
    "react/prop-types": "off",
    "react/jsx-props-no-spreading": "off",
    "no-restricted-syntax": "off",
    "jsx-a11y/anchor-is-valid": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["webpack.*.js", "postcss.config.js"]
      }
    ]
  },
  "overrides": [
    {
      "files": "./src/server/**/*.js",
      "env": {
        "node": true,
        "browser": false
      },
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["./src/client/**/*.js", "*.jsx"],
      "env": {
        "node": false,
        "browser": true
      }
    }
  ]
}
