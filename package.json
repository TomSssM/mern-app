{
  "name": "mern-app",
  "private": true,
  "version": "1.0.0",
  "description": "Usual MERN Application",
  "main": "build/server.js",
  "sideEffects": [
    "*.scss"
  ],
  "scripts": {
    "start": "NODE_ENV=production node --require dotenv/config ./build/server/index.js",
    "dev": "NODE_ENV=development npm-run-all --parallel client server",
    "build": "NODE_ENV=production npm-run-all 'build:*'",
    "build:server": "babel src --out-dir build --ignore src/client",
    "build:client": "webpack --config webpack.prod.js",
    "prestart": "npm run build",
    "prebuild": "npm run lint",
    "server": "nodemon src/server/index.js --quiet --exec babel-node --require dotenv/config",
    "client": "webpack serve --open --config webpack.dev.js",
    "format": "prettier '.' '.*rc'",
    "lint": "npm-run-all 'lint:*'",
    "lint:code": "eslint --ext '.jsx,.js' .",
    "lint:format": "npm run format -- --check",
    "lint:styles": "stylelint '**/*.scss'",
    "fix": "npm-run-all 'fix:*'",
    "fix:code": "npm run lint:code -- --fix",
    "fix:format": "npm run format -- --write",
    "fix:styles": "npm run lint:styles -- --fix",
    "predeploy": "npm run build",
    "prepare": "husky install"
  },
  "keywords": [
    "mern",
    "app",
    "react"
  ],
  "author": "TomSssM",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.10",
    "@babel/node": "^7.13.13",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-react": "^7.12.13",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^5.2.0",
    "prettier": "2.2.1",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.13.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "webpack": "^5.27.1",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.13.10",
    "classnames": "^2.3.1",
    "core-js": "^3.9.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intl": "^5.15.7",
    "react-router-dom": "^5.2.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.scss": "stylelint --fix",
    ".*rc": "prettier --write",
    "*.json": "prettier --write"
  }
}
